{
  "name": "video-library-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "eslint . --ext .ts,.tsx --max-warnings 0",
    "db:dev:migrate": "prisma migrate dev",
    "db:dev:studio": "prisma studio",
    "db:prod:migrate": "prisma migrate deploy",
    "db:seed": "pnpx ts-node --compiler-options '{\"module\":\"commonjs\"}' prisma/seed/main.ts",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "format:fix": "prettier --write . --ignore-unknown",
    "postinstall": "prisma generate",
    "start": "pnpm db:dev:migrate && next start",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.12.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "typescript": "^5"
  }
}
